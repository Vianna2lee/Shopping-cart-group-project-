import random
import datetime


new_pin_values = []






def add_money(money_in_account):
    amount_added = int(input("How much money do you want to add into your account: "))
    money_in_account = money_in_account + amount_added
    print("You now have", money_in_account,"in your account.")


def remove_money(money_in_account):
    amount_removed = int(input("How much money do you want remove from your account?: "))
    money_in_account = money_in_account - amount_removed
    print("You now have", money_in_account,"in your account.")


