contactless = input("are you contactless or not ")
colour = input("choose a colour(options but default is white)")






def age_calculator(birthdate):
   today = datetime.date.today()
   age = (today - birthdate) // datetime.timedelta(days=365.2425)
   return age




birthdate = datetime.date(year, month, date)
age = age_calculator(birthdate)
if age>= 30:
    print("you cant make a card you are over 30 " )
else:
    print("you can make a card you are under 30")


